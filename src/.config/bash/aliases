#!/usr/bin/env bash

## Prefered tool to exec as root
[ $UID -ne 0 ] && AUTH=doas

## My GitHub directories
GitHub="$HOME/GitHub/ides3rt/repositories"
GistHub="$HOME/GitHub/ides3rt/gists"

## Aliases
alias ghpcd="cd $GitHub" # `cd` to $GitHub
alias gshcd="cd $GistHub" # `cd` to $GistHub
alias ghsc="git --git-dir=$GitHub/Code/ --work-tree=$HOME/Code"
alias ghps="git --git-dir=$GitHub/Pictures/ --work-tree=$HOME/Pictures"
alias cp='cp -vZ'
alias mv='mv -vZ'
alias rm='rm -v'
alias mkdir='mkdir -vZ'
alias rmdir='rmdir -v'
alias chown='chown -c'
alias chmod='chmod -c'
alias mount='mount -v'
alias umount='umount -v'
alias fstrim='fstrim -v'
alias ln='ln -v'
alias ls='ls -hFNX -T 0 --color=auto --group-directories-first --show-control-chars' # Minimal `ls`
alias ip='ip -color=auto' # Colorful `ip`
alias dmesg='dmesg --color=auto -H' # Colorful `dmesg`
alias pcc="$AUTH pacman -Rnsc \$(pacman -Qtdq) && sync" # Remove `orphans` in Arch
alias grep='grep -sI --color=auto' # No errors when unreadable and colorful
alias fgrep='grep -F' # `grep -F` is a replacement for `fgrep`
alias egrep='grep -E' # `grep -E` is a replacement for `egrep`
alias diff='diff --color=auto --tabsize=4 ' # `diff` with colors is alots easier to read also set tab size to 4
alias media="cd /media/$USER"
alias mnt='cd /mnt'
alias doas='doas ' # Require if you want aliases to work with doas
alias htop="htop -t -u $USER" # It's so much cleaner
alias xclip='xclip -selection clipboard' # Normal `xclip` doesn't work for me
alias vol='pactl get-sink-volume @DEFAULT_SINK@' # Get your volume

unset GitHub GistHub AUTH

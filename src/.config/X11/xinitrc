#!/bin/sh

# X11 config directory
X11_DIR="$XDG_CONFIG_HOME/X11"

# Source autostart scripts
if Dir="$X11_DIR/xinitrc.d" && [ -d "$Dir" ]; then
	for File in $Dir/?*.sh; do
		[ -f "$File" -a -x "$File" ] && . $File
	done
fi

# Xresources
if File="$X11_DIR/Xresources"; then
	[ -f "$File" -a -r "$File" ] && xrdb -load $File
fi
unset -v X11_DIR File Dir

# X session manager
lxsession &

# I use `colemak`
setxkbmap us -variant colemak

# bspwm(1) doesn't set cursor by default
xsetroot -cursor_name left_ptr

# Compositor
picom --experimental-backends &

# Wallpapers
feh --no-fehbg --bg-fill --randomize $HOME/Pictures/cWallpapers &

# Notifications daemon
dunst &

# Hotkeys daemon
sxhkd &

# Your favorite WM/DE here!
exec bspwm

filetype plugin indent on

if has('syntax')
	syntax on

	if !has('gui_running')
		colorscheme ides3rt
		set ttyfast
		set guicursor=
	endif

	set cursorlineopt=number
endif

noremap <space> <Nop>
let mapleader = " "

if exists('+autochdir')
	set autochdir
endif

set autoindent
set autoread
set backspace=indent,eol,start
set belloff=all

if has('clipboard') && exists("$DISPLAY")
	set clipboard=unnamedplus,unnamed
endif

set complete+=kspell
set diffopt+=vertical
set fsync
set hidden
set history=10000

if has('extra_search')
	set hlsearch

	if has('reltime')
		set incsearch
	endif

	nnoremap <silent> <leader><space> :noh<CR>
endif

set ignorecase
set nojoinspaces

if has('langmap')
	set nolangnoremap
	set nolangremap
endif

set lazyredraw

if expand("$UID") == 0
    set listchars=tab:<->,trail:~
else
    set listchars=tab:<â”€>,trail:~
endif
nnoremap <silent> <leader>ls :set list!<CR>

set matchtime=0
set modelines=0
set nomodeline

set nomore
set nrformats=bin,hex

if has('linebreak')
	set numberwidth=2
	set breakindent
endif

set path=**

set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4

set shortmess+=cS

if has('cmdline_info')
	set noshowcmd
endif

set showmatch

set sidescroll=0
set sidescrolloff=999
set scrolloff=999

if has('nvim')
	set shada=
else
	if has('mksession')
		set sessionoptions+=slash,unix
		set viewoptions+=slash,unix
	endif

	command! W :exec ':silent w !doas tee % >/dev/null' | :edit!
endif

set splitbelow
set splitright

set nostartofline
set noswapfile
set textwidth=100

set notimeout
set ttimeout
set ttimeoutlen=0

if has('viminfo')
	set viminfo=
	set viminfofile=NONE
endif

set virtualedit=block
set wildignorecase

if has('wildmenu')
	set wildmenu
endif

set nowrap

autocmd FileType * setlocal formatoptions-=ro
autocmd BufWritePre * :%s/\s\+$//e

noremap <silent> j gj
noremap <silent> k gk

nnoremap <silent> Q <Nop>
nnoremap <silent> gQ <Nop>
nnoremap <silent> q: <Nop>

nnoremap <silent> Y y$

nnoremap <silent> <leader>ic :set ignorecase!<CR>
nnoremap <silent> <leader>sw :set wrap! linebreak!<CR>

noremap <silent> <leader>ac :center<CR>
noremap <silent> <leader>ar :right<CR>
noremap <silent> <leader>al :left<CR>

nnoremap <silent> <leader>nn :next<CR>
nnoremap <silent> <leader>pp :prev<CR>

set secure

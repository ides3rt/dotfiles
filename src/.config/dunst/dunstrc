# See dunst(5) for details.
[global]
	# Prefered monitor.
	monitor = 0

	# Position of notification.
	origin = top-right
	offset = 5x5

	# Progress bar.
	progress_bar = false

	# Separator.
	separator_height = 0

	# Padding.
	padding = 5
	horizontal_padding = 5

	# Notification's frame.
	frame_width = 2
	frame_color = "#767676"

	# Sort messages by urgency.
	sort = false

	# Font.
	font = Monofur Nerd Font 10

	# Notification's format.
	markup = full
	format = "<b>%s</b>\n%b"

	# Alignment.
	alignment = center
	vertical_alignment = center

	# Hidden notification.
	hide_duplicate_count = true

	# History.
	history_length = 0

	# Prefered software.
	dmenu = rofi -dmenu -p 'Dunst'
	browser = firefox-developer-edition

	# Rounded corners.
	corner_radius = 5

[urgency_low]
	background = "#121212"
	foreground = "#ffffff"
	timeout = 2

[urgency_normal]
	background = "#121212"
	foreground = "#ffffff"
	timeout = 4

[urgency_critical]
	background = "#121212"
	foreground = "#ffffff"
	timeout = 0

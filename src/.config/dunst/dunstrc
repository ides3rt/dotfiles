# See dunst(5)
[global]
	# Prefered monitor
	monitor = 0

	# Position of notifications
	origin = top-right
	offset = 5x5

	# Progress bar
	progress_bar = false

	# Separator
	separator_height = 0

	# Padding
	padding = 5
	horizontal_padding = 5

	# Notifications' frame
	frame_width = 2
	frame_color = "#fff"

	# Sort messages by urgency
	sort = false

	# Font
	font = Roboto Mono 9

	# Notifications' format
	markup = full
	format = "<b>%s</b>\n%b"

	# Alignment
	alignment = center
	vertical_alignment = center

	# Hidden notifications
	hide_duplicate_count = true

	# History
	history_length = 0

	# Prefered software
	dmenu = rofi -dmenu -p 'dunst'
	browser = firefox

	# Rounded corners
	corner_radius = 5

[urgency_low]
	background = "#000"
	foreground = "#fff"
	timeout = 2

[urgency_normal]
	background = "#000"
	foreground = "#fff"
	timeout = 2

[urgency_critical]
	background = "#000"
	foreground = "#fff"
	timeout = 2

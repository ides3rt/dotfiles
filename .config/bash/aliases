#!/usr/bin/env bash

#------------------------------------------------Set variables

# Prefered tool to exec as root
Auth='doas'

# Use `egt` to edit files
Editor='leafpad'

# Git
GitHub="$HOME/GitHub/ides3rt/git"
GistHub="$HOME/GitHub/ides3rt/gist"

#------------------------------------------------Colorful commands

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

alias diff='diff --color=auto'

alias ls='ls -hvF --color=auto --group-directories-first'

#------------------------------------------------Warn before you mess something up

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

#------------------------------------------------Lazy commands

# Common commands
alias egt="$Editor"
alias doas='doas --'
alias ..='cd ..'
alias lc='clear'
alias yay='mkdir -p /tmp/yay/abs; yay'
alias gphcd="cd /media/$USER/"
alias gtscd="cd /share/$USER/"
alias :q='exit'
alias uptime="uptime -p | sed 's/up[[:space:]]*//'"
alias neofetch=''
alias hi-reddit='\neofetch'

# LUKS
alias cplo="$Auth cryptsetup luksOpen"
alias cplc="$Auth cryptsetup luksClose"

# Git
alias ghcd="cd $GitHub"
alias gshcd="cd $GistHub"
alias ghsc="git --git-dir=$GitHub/Code/ --work-tree=$HOME/Code"
alias ghps="git --git-dir=$GitHub/Pictures/ --work-tree=$HOME/Pictures"

#------------------------------------------------Cleaner

# Remove cache
alias ec='rm -rf $HOME/.cache/* $HOME/.mozilla/firefox/{Crash\ Reports,Pending\ Pings} $HOME/.viminfo $HOME/.vim/.netrwhist >/dev/null && sync'

# Arch
alias pcc='yay -Rnsc $(yay -Qtdq) && sync'

#------------------------------------------------Unset

unset GitHub GistHub Editor Auth

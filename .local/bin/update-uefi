#!/bin/sh

efibootmgr --disk /dev/nvme0n1 --part 1 --create \
	--label 'Arch Linux' \
	--loader '\vmlinuz-linux' \
	--unicode 'root=UUID=56e3f62b-2131-480b-bad3-29367d1adf66 rootflags=subvol=@ ro initrd=\amd-ucode.img initrd=\initramfs-linux.img quiet nosplash kernel.yama.ptrace_scope=3 nvidia-drm.modeset=1'
